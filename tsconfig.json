{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "moduleResolution": "nodenext",
    "removeComments": false,
    "alwaysStrict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": [
    "sources/**/*.ts",
    "index.ts",
    "prompts.ts",
    "commander.ts"
  ]
}